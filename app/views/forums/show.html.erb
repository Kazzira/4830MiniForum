<div class="main-page-title-container">
	<h1 class="main-page-title"><%= @forum.title %></h1>
</div>

<div class="main-admin no-deco">
	<%= link_to new_topic_path(forum: @forum) do %>
		<div class="main-admin-button" id="width-medium">New Topic</div>
	<% end %>
</div>

<% @topics.each do |topic| %>
	<div class="board-container message-board no-deco">
		<div class="board-container-parts board-container-middle">
			<%= link_to topic_path(topic) do %>
				<span class="board-title"><%= topic.title %></span>
			<% end %>
			<br />
			<span class="board-description">Creator: <%= topic.user_name %></span>
		</div>
	</div>
<% end %>